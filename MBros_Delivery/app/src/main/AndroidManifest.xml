                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectCurrentUser"
            android:label="MBros_Delivery"
            android:theme="@style/AppTheme.NoActionBar">
